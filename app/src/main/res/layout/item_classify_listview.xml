        tools:text="移动开发"/>

    <com.upc.learnmooc.view.NoScrollGridView
        android:id="@+id/gv_classify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"/>
</LinearLayout>